pipeline {
  agent any
  // Works with password credentials selection
  parameters {
     credentials credentialType: 'com.cloudbees.plugins.credentials.impl.UsernamePasswordCredentialsImpl', 
     defaultValue: '', 
     description: 'Docker credentials', 
     name: 'DOCKER_PARAM', 
     required: true
  }
  environment{
    DOCKER=credentials("${DOCKER_PARAM}")
    //DOCKER  USU:PASS
    //DOCKER_USR   USER
    //DOCKER_PSW    PASSSWORD
  }
  stages {
    stage('Docker Build') {
      steps {
        sh 'docker build -t apasoft/jenkins-web:latest .'
      }
    }
    stage('Docker Push') {
      steps {        
          sh "docker login -u ${env.DOCKER_USR} -p ${env.DOCKER_PSW}"
          sh 'docker push apasoft/jenkins-web:latest'
      }
    }
  }
}
